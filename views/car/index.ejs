<%- include("../partials/header") %>

<div class="card">
  <h2>ðŸš˜ Car List</h2>

  <form method="GET" action="/cars/search" style="margin-bottom:15px;">
    <input type="text" name="keyword" placeholder="Search car...">
    <button class="btn-secondary">Search</button>
  </form>

  <table>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price / Day</th>
      <% if (typeof user !== 'undefined' && user) { %><th>Action</th><% } %>
    </tr>

    <% cars.forEach((c, i) => { %>
      <tr>
        <td><%= i + 1 %></td>
        <td><strong><%= c.name %></strong></td>
        <td style="color:#27ae60; font-weight:bold;">
          $<%= c.pricePerDay %>
        </td>
        <% if (typeof user !== 'undefined' && user) { %>
        <td>
          <a href="/bookings/create?carId=<%= c._id %>"><button class="btn-secondary">Book</button></a>
        </td>
        <% } %>
      </tr>
    <% }) %>
  </table>
</div>

<%- include("../partials/footer") %>
