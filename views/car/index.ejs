<%- include("../partials/header") %>

<div class="card">
  <h2><i class="fas fa-car-side"></i> Car List</h2>

  <form method="GET" action="/cars/search" style="margin-bottom:20px; display: flex; gap: 10px; align-items: center;">
    <input type="text" name="keyword" placeholder="ðŸ” Search for cars..." style="flex: 1; max-width: 400px; padding: 12px 20px; border: 2px solid #e0e0e0; border-radius: 25px; font-size: 1rem;">
    <button class="btn-secondary" style="padding: 12px 24px; border-radius: 25px;">
      <i class="fas fa-search"></i> Search
    </button>
  </form>

  <div style="overflow-x: auto;">
    <table>
      <tr>
        <th style="width: 60px; text-align: center;">#</th>
        <th><i class="fas fa-car"></i> Car Name</th>
        <th><i class="fas fa-dollar-sign"></i> Price / Day</th>
        <% if (typeof user !== 'undefined' && user) { %>
          <th style="text-align: center;"><i class="fas fa-cog"></i> Action</th>
        <% } %>
      </tr>

      <% cars.forEach((c, i) => { %>
        <tr style="transition: all 0.3s ease;">
          <td style="text-align: center; font-weight: 600; color: #667eea;"><%= i + 1 %></td>
          <td>
            <div style="display: flex; align-items: center; gap: 10px;">
              <div style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea, #764ba2); border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-car" style="color: white; font-size: 1.2rem;"></i>
              </div>
              <strong style="font-size: 1.05rem;"><%= c.name %></strong>
            </div>
          </td>
          <td>
            <span style="background: linear-gradient(135deg, #11998e, #38ef7d); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-weight: 700; font-size: 1.1rem;">
              $<%= c.pricePerDay %>
            </span>
            <span style="color: #95a5a6; font-size: 0.85rem;">/day</span>
          </td>
          <% if (typeof user !== 'undefined' && user) { %>
            <td style="text-align: center;">
              <a href="/bookings/create?carId=<%= c._id %>">
                <button class="btn-secondary" style="padding: 8px 20px;">
                  <i class="fas fa-calendar-plus"></i> Book Now
                </button>
              </a>
            </td>
          <% } %>
        </tr>
      <% }) %>
    </table>
  </div>

  <% if (cars.length === 0) { %>
    <div style="text-align: center; padding: 40px; color: #95a5a6;">
      <i class="fas fa-car" style="font-size: 4rem; margin-bottom: 20px; opacity: 0.3;"></i>
      <p style="font-size: 1.2rem;">No cars found</p>
    </div>
  <% } %>
</div>

<%- include("../partials/footer") %>
